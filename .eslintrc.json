{
    "env": {
        "jest/globals": true,
        "browser": false,
        "es2021": true,
        "node": true
    },
    "plugins": ["jest"],
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle": [2, { "allow": ["__filename", "__dirname"] }],
        "object-curly-newline": "off",
        "no-console": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {"js": "always"}
        ]
    }
}
